{
  "name": "Jarvis Extension",
  "version": "0.5.5",
  "description": "Connection to the Jarvis world.",
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png" },
  "manifest_version": 2,
  "minimum_chrome_version": "20.0.1130.1",
  "background": { 
    "page": "views/background.html"
  },
  "omnibox": {
    "keyword": "cf"
  },
  "browser_action": {
    "default_icon": "images/alviso_icon.png",
    "default_popup": "views/popup.html"
  },
  "web_accessible_resources": [
    "views/sidebar-frame.html"
  ],
  "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "css": [
            	"css/styles.css"
            ],
            "js": [ 
					"js/myscript.js"
            ],
            "run_at": "document_end"
        },
		{
            "matches": [
                "https://github.com/*"
            ],
            "css": [
            	"css/styles.css"
            ],
            "js": [ "js/jquery-2.0.2.min.js",
					"js/github_profile.js"
            ],
            "run_at": "document_end"
        },
		{
            "matches": [
                "https://api.github.com/*"
            ],
            "css": [
            	"css/styles.css"
            ],
            "js": [ "js/jquery-2.0.2.min.js",
					"js/github.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "<all_urls>", "tabs"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "incognito": "split"
}
